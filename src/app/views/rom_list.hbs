<div class="row">
    <div class="large-12 medium-12 columns">
        <a href="/Roms/home">&lt; Back to system list</a>
    </div>

    <hr />

    <div class="large-12 medium-12 columns">

        <div class="row">
            <div class="large-8 medium-8 small-12 columns">
                <table class="expand">
                    <thead>
                    <tr>
                        <th>Filename</th>
                        <th>Size</th>
                        <th>Delete it</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each  files}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.fsize}} Mo</td>
                            <td class="text-center"><a href="/Roms/delete/{{this.section}}/{{this.name}}" class="item"><i class="fi-trash"></i> </a> </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="large-4 medium-4 small-12 columns">
                <div id="simpleUpload">
                    <h4>Ajouter des roms</h4>
                    <!-- http://css-tricks.com/css3-progress-bars/ -->
                    <div class="meter">
                        <span class="roller"></span>
                    </div>
                    <form action="/Roms/upload/{{sltPath}}" method="POST" enctype="multipart/form-data" class="dropzone" id="logoDropZone">
                        <input type="hidden" name="userName" value="user"/>
                        <input type="file" name="file" multiple="true" />
                        <!--<input type="submit" value="Upload" />-->
                    </form>
                    <!-- Also checkout BS example : http://www.dropzonejs.com/bootstrap.html -->

                </div>


            </div>
        </div>
    </div>
</div>